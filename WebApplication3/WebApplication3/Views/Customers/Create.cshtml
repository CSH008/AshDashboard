
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid content-wrapper">
    <div class="mt-5">
        <div class="h3 d-flex justify-content-center mr-5">
            Create Customer Profile
        </div>
        <div class=" d-flex justify-content-end mr-6">
            <i class="fas fa-user-circle head-user"></i>
        </div>
    </div>
    <div class="profile row ml-0 ">
        <form class="needs-validation col-lg-12 ml-0 ml-lg-5" novalidate>

            <div class="form-group md-form row m-lg-3">
                <label for="create_companyName" class="col-form-label "><i class="fas fa-building profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="create_companyName" placeholder="Company Name" aria-describedby="inputGroupPrepend" required>
                    </div>
                </div>
                <div class="invalid-feedback">
                    Please provide a company name.
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "> <i class="fas fa-user profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="creacte_contactPerson" placeholder="Contact Person" required>
                    </div>
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "><i class="fas fa-map-marker-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="creacte_address" placeholder="Address" required>
                    </div>
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-envelope profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="email" class="form-control" id="creacte_email" placeholder="Email" required>
                    </div>
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-phone profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="creacte_phone" placeholder="Phone" required>
                    </div>
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-mobile-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="creacte_mobile" placeholder="Mobile" required>
                    </div>
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-user profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="creacte_userName" placeholder="User Name" required>
                    </div>
                </div>
            </div>

            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-lock profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input type="text" class="form-control" id="creacte_password" placeholder="Password" required>
                    </div>
                </div>
            </div>

            <div class="form-group  d-flex justify-content-end mr-6 ">
                <button type="submit" class="btn-other btn-sm" style="width:150px;">Save</button>
            </div>

        </form>
    </div>
</div>


@section Styles {
    <link href="~/lib/mdbootstrap/css/mdb.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
}
@section Scripts {
    <script src="~/js/create.js" type="text/javascript"></script>

    <!-- DataTables Select CSS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
}

