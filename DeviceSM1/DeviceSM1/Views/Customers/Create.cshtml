    <div class="profile row ml-0">
        <form asp-controller="Customers" asp-action="RegisterUser" class="needs-validation col-lg-12 ml-0 ml-lg-5" novalidate>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-user profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="name" type="text" class="form-control" placeholder="User Name" required="required" aria-describedby="inputGroupPrepend " autofocus="autofocus">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-lock profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="password" type="password" class="form-control" placeholder="Password" required="required">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label for="create_companyName" class="col-form-label "><i class="fas fa-building profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="company" type="text" class="form-control" placeholder="Company Name" required="required">
                    </div>
                </div>
                <div class="invalid-feedback">
                    Please provide a company name.
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "> <i class="fas fa-user profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="contactperson" type="text" class="form-control" placeholder="Contact Person" required="required">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "><i class="fas fa-map-marker-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="address" type="text" class="form-control" placeholder="Address" required="required">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-envelope profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="email" type="email" class="form-control" placeholder="Email" required="required">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-phone profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="phone" type="text" class="form-control" placeholder="Phone" required="required">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-mobile-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="mobile" type="text" class="form-control" placeholder="Mobile" required="required">
                    </div>
                </div>
            </div>
            <div class="form-group  d-flex justify-content-end mr-6 ">
                <button id="customer_save" class="btn-other btn-sm btn-w"><i class=" fa fa-save btn_i"></i>Save</button>
                <span style="opacity:0">0000</span>
                <button id="customer_cancel" class="btn-other btn-sm btn-w"> <i class=" fa fa-eraser btn_i"></i>Cancel</button>
            </div>
        </form>
    </div>
</div>


