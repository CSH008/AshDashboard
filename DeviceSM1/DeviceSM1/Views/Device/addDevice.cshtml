    <form  asp-controller="Device" asp-action="RegisterDevice" class="needs-validation" novalidate>
        <div class="profile row ml-0 mt-3 ml-sm-5">
            <div class="col-md-12 col-sm-10 ">
                <div class="row mt-sm-1">
                    <div class="col-md-4">
                        <div class="form-group row m-lg-3">
                            <label class="col-form-label "><i class="fas fa-assistive-listening-systems profile-icon"></i></label>
                            <div class="col-7">
                                <div class="md-form mt-3">
                                    <input type="text" name="IMEI" class="form-control" id="device_IMEI" placeholder="IMEI" required="required">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row m-lg-3">
                            <label class="col-form-label "><i class="fas fa-user profile-icon"></i></label>
                            <div class="col-7">
                                <div class="md-form mt-3">
                                    <input type="text" name="name" class="form-control" id="device_customer" placeholder="Customer" required="required">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ml-auto">
                        <div class="form-group row m-lg-3">
                            <label class="col-form-label "><i class="fas fa-passport profile-icon"></i></label>

                            <div class="col-7">
                                <div class="md-form mt-3">
                                    <input type="text" name="sim_card" class="form-control" id="device_simNo" placeholder="Sim card" required="required">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-sm-1">
                    <div class="col-md-4">
                        <div class="form-group row m-lg-3">
                            <label class="col-form-label "><i class="fas fa-map-marker-alt profile-icon"></i></label>
                            <div class="col-7">
                                <div class="md-form mt-3">
                                    <input type="text" name="location"  class="form-control" id="device_location" placeholder="Location" required="required">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row m-lg-3">
                            <label class="col-form-labels"><i class="fas fa-arrow-circle-right profile-icon"></i></label>
                            <div class="col-7">
                                <div class="md-form ">
                                    <select class="select_type" name="vehicle" required="required">
                                        <option value="1">tracking</option>
                                        <option value="2">M2M</option>
                                        <option value="3">G.H</option>

                                    </select>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ml-auto">
                        <div class="form-group row m-lg-3">
                            <label class="col-form-label "><i class="fas fa-toggle-on profile-icon"></i></label>

                            <div class="col-7">
                                <div class="md-form mt-3">
                                    <input type="text" name="status" class="form-control" id="device_status" placeholder="Status" required="required">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row justify-content  editor_table ">
            <div class="head_sensor_no">No. </div>
            <div class="head_sensor">Type Of Sensor </div>
            <div class="head_sensor">Serial Number</div>
            <div class="head_sensor">High Threshold </div>
            <div class="head_sensor">Low Threshold </div>
            <div class="head_sensor_no">Relay </div>
            <div class="table_sensor_no">1 </div>
            <div class="table_sensor">Pressure</div>
            <div class="table_sensor"> <input type="text"  class="form-controll" name="p_no"></div>
            <div class="table_sensor"> <input type="text"  class="form-controll"name="p_h"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="p_l"></div>
            <div class="table_sensor_no"> <input type="checkbox" class="form-control"name="p_r"></div>
            <div class="table_sensor_no">2</div>
            <div class="table_sensor">Temperature</div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="t_no"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="t_h"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="t_l"></div>
            <div class="table_sensor_no"> <input type="checkbox" class="form-control" name="t_r"></div>
            <div class="table_sensor_no">3</div>
            <div class="table_sensor">Humidity</div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="h_no"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="h_h"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="h_l"></div>
            <div class="table_sensor_no"> <input type="checkbox" class="form-control" name="h_r"></div>
            <div class="table_sensor_no">4</div>
            <div class="table_sensor">Moisture</div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="m_no"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="m_h"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="m_l"></div>
            <div class="table_sensor_no"> <input type="checkbox" class="form-control" name="m_r"></div>
            <div class="table_sensor_no">5</div>
            <div class="table_sensor">Liquid Flow</div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="l_no"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="l_h"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="l_l"></div>
            <div class="table_sensor_no"> <input type="checkbox" class="form-control" name="l_r"></div>
            <div class="table_sensor_no">6</div>
            <div class="table_sensor">CO2</div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="c_no"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="c_h"></div>
            <div class="table_sensor"> <input type="text" class="form-controll" name="c_l"></div>
            <div class="table_sensor_no"> <input type="checkbox" class="form-control" name="c_r"></div>
        </div>

        <div class="row justify-content-end mt-md-5  ">
            <div style="margin-right:5%">
                <button id="deviceSave" class="btn-other btn-sm btn-w"> <i class=" fa fa-save btn_i"></i>Save</button>
                <span style="opacity:0">0000</span>
                <button id="device_delete" class="btn-other btn-sm btn-w"> <i class=" fa fa-eraser btn_i"></i>Cancel</button>
            </div>
        </div>
    </form>

</div>

