@using DeviceSM1.Models;
@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "Update";
    DataTable data = (DataTable)ViewData["profile_Info"];
}

<div class="container-fluid content-wrapper">
    <div class="m-sm-5">
        <div class="d-flex justify-content-start ml-sm-3 ">
            <h3 class="" style="font-weight: 500;">Administrator<span style="opacity:0">0</span>Detail</h3>
        </div>
    </div>

    <div class="profile row ml-0">
        <form asp-controller="Admin" asp-action="UpdateAdmin" id="customer_form" class="needs-validation col-lg-12 ml-0 ml-lg-5" novalidate>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-user profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="name" value="@data.Rows[0]["name"]" type="text" hidden/>
                        <input value="@data.Rows[0]["name"]" type="text" class="form-control" placeholder="User Name" autofocus="autofocus" disabled required>
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-lock profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="password" value="00000000" id="password" type="password" class="form-control" placeholder="Password" disabled required>
                        <div class="invalid-feedback">
                            Please choose a password.
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label for="create_companyName" class="col-form-label "><i class="fas fa-building profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="company" value="@data.Rows[0]["company"]" id="company" type="text" class="form-control" placeholder="Company Name">
                    </div>
                </div>
                <div class="invalid-feedback">
                    Please provide a company name.
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "> <i class="fas fa-user-friends profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="contactperson" value="@data.Rows[0]["contactperson"]" id="contact" type="text" class="form-control" placeholder="Contact Person">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label "><i class="fas fa-map-marker-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="address" value="@data.Rows[0]["address"]" id="address" type="text" class="form-control" placeholder="Address">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-envelope profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="email" value="@data.Rows[0]["email"]" id="email" type="email" class="form-control" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-phone profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="phone" value="@data.Rows[0]["phone"]" type="text" class="form-control" placeholder="Phone">
                    </div>
                </div>
            </div>
            <div class="form-group md-form row m-lg-3">
                <label class="col-form-label"><i class="fas fa-mobile-alt profile-icon"></i></label>
                <div class="col-lg-5">
                    <div class="md-form ml-5">
                        <input name="mobile" value="@data.Rows[0]["phone"]" type="text" class="form-control" placeholder="Mobile">
                    </div>
                </div>
            </div>
            <div class="form-group  d-flex justify-content-end mr-6 ">
                <button type="submit" id="customer_save" class="btn-other btn-sm btn-w"><i class=" fa fa-save btn_i"></i>Save</button>
                <span style="opacity:0">0000</span>
                <button type="button" id="customer_cancel" class="btn-other btn-sm btn-w"> <i class=" fa fa-eraser btn_i"></i>Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="~/plugins/mdbootstrap/css/mdb.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/plugins/mdbootstrap/js/mdb.min.js"></script>

    <script type="text/javascript">
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        $("#customer_cancel").click(function () {
            location.href = "/Admin";
        })
    </script>
}

